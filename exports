# enable colored output from ls, etc
export CLICOLOR=1
export LSCOLORS="Exfxcxdxbxegedabagacad"

# load
export PATH="$HOME/.rbenv/shims:$HOME/.rbenv/bin:node_modules/.bin:/usr/local/bin:/usr/local/sbin:$PATH"
export CDPATH=".:$HOME/dev/"
export VISUAL="vim"
export GIT_EDITOR="vim"
export EDITOR="$VISUAL"

# GO
export PATH="$(go env GOPATH)/bin:$PATH"

# GNU Binaries (i.e. sed)
PATH="/usr/local/opt/gnu-sed/libexec/gnubin:$PATH"

# prompt
export PS1="\[$Blue\]\$(vcprompt -f '[%b%u%m]')\[$Color_Off\][\w]$ "

# silence macos zsh warning
export BASH_SILENCE_DEPRECATION_WARNING=1
